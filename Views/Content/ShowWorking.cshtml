@model List<KL.Models.Job>
@using KL.Models.DatabaseModels;
@{
    var db = new Smof();
}
<div id="page-wrapper">
    <div class="row" id="content">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Cong Viec Ca Nhan Dang Lam @Model.Count
                    <br />
                    <p>Ban Vua Nhan Them</p>

                </div>

                <div class="card-body " id="toggle-ontable">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Stt</th>
                                    <th>Ten Cong Viec</th>
                                    <th>Noi Dung Tom Tat</th>
                                    <th>File Dinh Kem</th>
                                    <th>Thoi Han Hoan Thanh</th>
                                    <th>Thuoc Cong Viec</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var cv in Model)
                                {
                                    if (cv.TrangThai == "0")
                                    {
                                        <tr class="@cv.ID" style="background-color:greenyellow">
                                            <td>@(Model.ToList().IndexOf(cv) + 1)</td>
                                            <td>@cv.Ten</td>
                                            <td>@cv.NoiDungCongViec</td>
                                            <td>
                                                <span>File</span>
                                                <input type="file" id="file" name="file" size="10" />
                                                <input id="uploadbutton" type="button" value="Upload" />
                                            </td>
                                            <td>@cv.ThoiHanHoanThanh</td>
                                            <td>@cv.IDkhac</td>

                                            <td><button class="report">report</button></td>
                                        </tr>
                                    }
                                    else
                                    {

                                        <tr class="@cv.ID" >
                                            <td>@(Model.ToList().IndexOf(cv) + 1)</td>
                                            <td>@cv.Ten</td>
                                            <td>@cv.NoiDungCongViec</td>
                                            <td>
                                                <span>File</span>
                                                <input type="file" id="file" name="file" size="10" />
                                                <input id="uploadbutton" type="button" value="Upload" />
                                            </td>
                                            <td>@cv.ThoiHanHoanThanh</td>
                                            <td>@cv.IDkhac</td>

                                            <td><button class="report">report</button></td>
                                        </tr>
                                    }
                                }
                            </tbody>


                        </table>
                    </div>
                </div>

                <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
        @db.SaveChanges();
    </div>
    <script>
        $("#uploadbutton").click(function () {
            var filename = $("#file").val();
        $.ajax({
            type: "POST",
            url: "",
            enctype: 'multipart/form-data',
            data: {
                file: filename
            },
            success: function () {
                alert("Data Uploaded: ");
            }
        });
        });
        $('.report').click(function () {
            alert("report");
            var idrow = $(this).closest('tr');
            
            $(idrow).remove();
            $.ajax({
                url: "/Job/Report?idJob=" + idrow.attr('class'),
                type: "POST",
                success: function () {
                }
            });
        });
    </script>
</div>
