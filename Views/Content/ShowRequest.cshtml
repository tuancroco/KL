@model List<KL.Models.Job>
@using KL.Models.DatabaseModels;
@{
    var db = new Smof();

}
<div id="page-wrapper">
    <div class="row" id="content">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Cong Viec Cho Request @Model.Count
                </div>

                <div class="card-body " id="toggle-ontable">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Stt</th>
                                    <th>Ten Cong Viec</th>
                                    <th>Noi Dung Tom Tat</th>
                                    <th>File Dinh Kem</th>
                                    <th>Thoi Gian Hoan Thanh</th>
                                    <th>Thuoc Cong Viec</th>
                                    <th>Phan Hoi</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var cv in Model)
                                {
                                    if (cv.New == "0")
                                    {
                                        <tr class="@cv.ID" style="background-color:lightgreen;">
                                            <td>@(Model.ToList().IndexOf(cv) + 1)</td>
                                            <td>@cv.Ten</td>
                                            <td>@cv.NoiDungCongViec</td>
                                            <td>
                                                @cv.File
                                            </td>
                                            <td>@cv.ThoiGianHoanThanh</td>
                                            <td>@cv.IDkhac</td>
                                            @if (cv.TrangThaiPh == 0)
                                            {
                                                <td style="background-color:red;">@cv.PhanHoi</td>

                                            }
                                            else
                                            {
                                                <td>@cv.PhanHoi</td>
                                            }
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr class="@cv.ID">
                                            <td>@(Model.ToList().IndexOf(cv) + 1)</td>
                                            <td>@cv.Ten</td>
                                            <td>@cv.NoiDungCongViec</td>
                                            <td>
                                                @cv.File
                                            </td>
                                            <td>@cv.ThoiGianHoanThanh</td>
                                            <td>@cv.IDkhac</td>
                                            @if (cv.TrangThaiPh == 0)
                                            {
                                                <td style="background-color:red;">@cv.PhanHoi</td>

                                            }
                                            else
                                            {
                                                <td>@cv.PhanHoi</td>
                                            }

                                        </tr>
                                    }
                                }
                            </tbody>


                        </table>
                    </div>
                </div>

                <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
        @db.SaveChanges();
    </div>
    <script>


        $('.report').click(function () {
            alert("report");
            var idrow = $(this).closest('tr');
            @{ var t = 0;
                if (Model.Count > 0)
                {
                    t = Model[0].vitriCv;
                }
                
                }
            $(idrow).remove();
            $.ajax({
                url: "/Job/Report?ma=@t&idJob=" + idrow.attr('class'),
                type: "POST",
                success: function () {
                    }
                });
        });

        $(".phanHoi").click(function () {

        });
    </script>
</div>
