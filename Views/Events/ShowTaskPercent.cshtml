@model List<KL.Models.taskTimeModel>
<ul class="dropdown-menu dropdown-tasks">
    @foreach (var item in Model)
    {
        var t = "progress-bar-success";
        if (item.percent <= 60) { t = "progress-bar-warning"; }
        if (item.percent <= 40) { t = "progress-bar-info"; }
        if (item.percent <= 20) { t = "progress-bar-danger"; }
        <li>
            <a href="#">
                <div>
                    <p>
                        <strong>@item.jobName</strong>
                        <span class="pull-right text-muted">@item.percent % Complete</span>
                    </p>
                    <div class="progress progress-striped active">
                        <div class="progress-bar @t" role="progressbar" aria-valuenow="@item.percent" aria-valuemin="0" aria-valuemax="100" style="width: @item.percent%">
                            <span class="sr-only">@item.percent % Complete (success)</span>
                        </div>
                    </div>
                </div>
            </a>
        </li>

        <li class="divider"></li>
    }
    

</ul>