@model List<KL.Models.Job>
@{
    ViewBag.Title = "ShowSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .t1{
        background-color:papayawhip;
    }
    .t2{
        background-color:palegoldenrod;
    }
</style>
<h2>ShowSearch</h2>
<div id="page-wrapper">
    <div class="row" id="content">
        <div class="col-lg-12">
            <h1 class="page-header">Ket qua tim kiem</h1>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Ket qua tim kiem @Model.Count
                    
                </div>

                <div class="card-body " id="toggle-ontable">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Stt</th>
                                    <th>Ten Cong Viec</th>
                                    <th>Noi Dung Tom Tat</th>
                                    <th>File Dinh Kem</th>
                                    <th>Thoi Han Hoan Thanh</th>
                                    <th>Thuoc Cong Viec</th>
                                    <th>Phan Hoi</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var cv in Model)
                                {
                                    if (cv.New == "0")
                                    {
                                        <tr class="@cv.ID @('t'+cv.vitriCv)" style="background-color:greenyellow">
                                            <td>@(Model.ToList().IndexOf(cv) + 1)</td>
                                            <td>@cv.Ten</td>
                                            <td>@cv.NoiDungCongViec</td>
                                            @if (cv.vitriCv == 4) { }
                                            else
                                            {
                                                <td>
                                                    <span>File</span>
                                                    <input type="file" id="file" name="file" size="10" />
                                                    <input id="uploadbutton" type="button" value="Upload" />
                                                </td>
                                            }
                                            <td>@cv.ThoiHanHoanThanh</td>
                                            <td>@cv.IDkhac</td>
                                            @if (cv.vitriCv == 4) { }
                                            else
                                            {
                                                <td><button class="pHoi">Phan Hoi</button></td>
                                            }
                                        </tr>
                                    }
                                    else
                                    {

                                        <tr class="@cv.ID @('t'+cv.vitriCv.ToString())">
                                            <td>@(Model.ToList().IndexOf(cv) + 1)</td>
                                            <td>@cv.Ten</td>
                                            <td>@cv.NoiDungCongViec</td>
                                            @if (cv.vitriCv != 4)
                                            {
                                                <td>
                                                    <span>File</span>
                                                    <input type="file" id="file" name="file" size="10" />
                                                    <input id="uploadbutton" type="button" value="Upload" />
                                                </td>
                                            }
                                            <td>@cv.ThoiHanHoanThanh</td>
                                            <td>@cv.IDkhac</td>
                                            @if (cv.vitriCv == 4)
                                            {

                                            }
                                            else if (cv.slPh > 0)
                                            {
                                                <td><button class="pHoi">Phan Hoi</button></td>
                                            }
                                            else
                                            {
                                                <td>Khong co phan hoi</td>
                                            }

                                            @if (cv.vitriCv == 4)
                                            { }
                                            else
                                            {
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>


                        </table>
                    </div>
                </div>

                <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <script>
        $("#uploadbutton").click(function () {
            var filename = $("#file").val();
        $.ajax({
            type: "POST",
            url: "",
            enctype: 'multipart/form-data',
            data: {
                file: filename
            },
            success: function () {
                alert("Data Uploaded: ");
            }
        });
        });
        
        $('.pHoi').click(function () {
            var idrow = $(this).closest('tr').attr('class')[0];
            $.ajax({
                url: "/Job/GetPHoi?idJob=" + idrow,
                type: "POST",
                success: function (data) {
                    $("#phoicn").replaceWith($(data));
                    $("#phoicn").show();
                }
            });
        });
    </script>
</div>
<div  id="phoicn"></div>
